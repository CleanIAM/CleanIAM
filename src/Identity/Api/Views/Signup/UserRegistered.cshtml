@model Identity.Api.ViewModels.Signup.UserRegisteredViewModel

@{
    ViewData["Title"] = "Registration Successful";
}

<div class="max-w-md mx-auto mt-16 bg-white p-8 shadow-lg rounded-lg text-center">
    <h2 class="text-2xl font-bold text-green-600 mb-4">Registration Successful!</h2>

    <p class="text-gray-700 mb-2">
        Welcome, <span class="font-semibold">@Model.FirstName @Model.LastName</span>!
    </p>
    <p class="text-gray-700">
        A confirmation has been sent to <span class="font-semibold">@Model.Email</span>.
    </p>

    <div class="mt-6">
        <a href="/" class="inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-md">
            Go to Home
        </a>
    </div>
</div>