@model Identity.Api.Views.Mfa.MfaViewModel

@{
    ViewData["Title"] = "MFA";
}

<div class="flex justify-center mt-12 px-4">
    <div class="w-full max-w-md">
        <div class="bg-white shadow-lg rounded-xl overflow-hidden">
            <div class="bg-blue-600 text-white px-6 py-4">
                <h3 class="text-xl font-semibold">@ViewData["Title"] Authentication</h3>
            </div>
            <div class="px-6 py-5">
                <p class="text-gray-700 mb-5">
                    Please enter the verification code from your authenticator app.
                </p>
                <form method="post" asp-action="MfaInput" class="space-y-5">
                    <div>
                        <label asp-for="Totp" class="block text-sm font-medium text-gray-700 mb-1">Verification
                            Code</label>
                        <input asp-for="Totp"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg text-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                               placeholder="Enter 6-digit code" autocomplete="off" autofocus/>
                        <span asp-validation-for="Totp" class="text-red-600 text-sm mt-1 block"></span>
                    </div>

                    <div>
                        <button type="submit"
                                class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 text-lg font-semibold rounded-lg transition">
                            Verify
                        </button>
                    </div>
                </form>
            </div>
            <div class="bg-gray-100 text-gray-600 text-center text-sm px-6 py-3">
                This page is protected â€” your verification code is never stored or shared.
            </div>
        </div>
    </div>
</div>