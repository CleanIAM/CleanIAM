@model Identity.Api.Views.PasswordReset.PasswordResetRequestSentViewModel

@{
    ViewData["Title"] = "Password Reset Request Sent";
}

<div class="flex min-h-screen items-center justify-center bg-gray-50 p-6">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-xl ring-1 ring-gray-200">
        <h1 class="text-3xl font-semibold text-center text-gray-900 mb-6">Password Reset Request Sent</h1>
        <p class="text-center text-gray-700 mb-4">A password reset email has been sent to your email address.</p>
        <p class="text-center text-gray-700 mb-4">Please check your inbox and follow the instructions to reset your
            password.</p>
    </div>
</div>
