@model Identity.Api.Emails.PasswordResetEmailViewModel

<!DOCTYPE html>
<html lang="en">
<head> <title>VerificationEmail</title></head>
<body style="font-family: Arial, sans-serif; background-color: #f9f9f9; padding: 20px;">
<table width="100%" cellpadding="0" cellspacing="0" border="0" style="max-width: 600px; margin: auto; background-color: #ffffff; padding: 20px;">
    <tr>
        <td>
            <h1 style="color: #333;">Password Reset Request</h1>
            <p style="color: #555;">We received a request to reset your password. If you made this request, click the button below to continue:</p>
            <p style="text-align: center; margin-top: 30px;">
                <a href="@Model.PasswordResetUrl" style="display: inline-block; padding: 12px 24px; background-color: #007bff; color: #ffffff; text-decoration: none; font-size: 16px; border-radius: 4px;">Reset Password</a>
            </p>
        </td>
    </tr>
</table>
</body>
</html>