@model CreateNewUserModel
@{
    ViewData["Title"] = "Create New User";
    Layout = "_Layout";
}

<div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="flex justify-between items-center px-6 py-4 border-b border-gray-200">
        <h1 class="text-2xl font-semibold text-gray-900">Create New User</h1>
        <a asp-action="Index"
           class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
            <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Users
        </a>
    </div>
    <div class="px-6 py-5">
        <p class="text-sm text-gray-500 mb-6">
            Create a new user account in the system.
        </p>
        <form method="post" asp-action="CreateNewUserAsync">
            <div class="bg-white p-6 border border-gray-200 rounded-md shadow-sm">
                <partial name="_UserForm" model="new UserFormModel
                                            {
                                                Email = Model?.Email ?? string.Empty,
                                                FirstName = Model?.FirstName ?? string.Empty,
                                                LastName = Model?.LastName ?? string.Empty,
                                                Roles = Model?.Roles ?? new [] { SharedKernel.Core.UserRole.User },
                                                IsEditMode = false
                                            }"/>
            </div>
        </form>
    </div>
</div>