@model CreateNewUserModel
@{
    ViewData["Title"] = "Create New User";
    Layout = "_Layout";
}

<div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
        <div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Create New User</h3>
            <p class="mt-1 text-sm text-gray-500">
                Create a new user in the system.
            </p>
        </div>
        <form method="post" asp-action="CreateNewUserAsync">
            <div class="mt-5">
                <partial name="_UserForm" model="new UserFormModel
                                            {
                                                Email = Model?.Email ?? string.Empty,
                                                FirstName = Model?.FirstName ?? string.Empty,
                                                LastName = Model?.LastName ?? string.Empty,
                                                Roles = Model?.Roles ?? new [] { SharedKernel.Core.UserRole.User },
                                                IsEditMode = false
                                            }"/>
            </div>
        </form>
    </div>
</div>