@model _DynamicListItem
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div class="redirect-uri-item flex items-center space-x-2 p-2 border border-gray-200 rounded-md bg-gray-50 hx-url-item"
     hx-target="this">
    
    <input name="@Model.Name" hidden value="@Model.Value"/>
    
    <span class="flex-grow text-sm text-gray-700 break-all">@Model.Value</span>

    <div class="text-red-500 hover:text-red-700 focus:outline-none"
         hx-delete="@Url.Action("RemoveHtmxElement", "MainPage")"
         hx-swap="delete"
         hx-params="none"
         hx-headers='{"RequestVerificationToken": "@Antiforgery.GetAndStoreTokens(Context).RequestToken"}'>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd"
                  d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"
                  clip-rule="evenodd"/>
        </svg>
    </div>
</div>