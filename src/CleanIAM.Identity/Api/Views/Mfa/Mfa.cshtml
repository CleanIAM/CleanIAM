@model CleanIAM.Identity.Api.Views.Mfa.MfaViewModel

@{
    ViewData["Title"] = "MFA";
}
<div class="flex min-h-screen items-center justify-center bg-gray-50 p-6">
    <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-xl ring-1 ring-gray-200">
        <h1 class="text-2xl font-semibold text-center text-gray-900 mb-6">
            @ViewData["Title"] Authentication
        </h1>
        <p class="text-sm text-gray-600 text-center mb-6">
            Enter the 6-digit code from your authenticator app.
        </p>

        <form method="post" asp-action="MfaInput" class="space-y-6">
            <div>
                <label asp-for="Totp" class="block text-sm font-medium text-gray-700 mb-1">Verification Code</label>
                <input asp-for="Totp"
                       class="block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm text-base focus:ring-indigo-500 focus:border-indigo-500 transition duration-300"
                       placeholder="123456"
                       autocomplete="off"
                       autofocus />
                <span asp-validation-for="Totp" class="text-red-500 text-sm mt-1 block"></span>
            </div>

            <button type="submit"
                    class="w-full px-4 py-3 bg-indigo-600 text-white font-semibold rounded-lg shadow-md hover:bg-indigo-700 transition duration-300 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">
                Verify Code
            </button>
        </form>

        <div class="text-center mt-2">
            <form id="cancel-form" method="post" action="/mfa/cancel" class="inline">
                <button type="submit"
                        class="text-sm text-gray-500 hover:underline">
                     Cancel authentication flow
                </button>
            </form>
        </div>

        <p class="text-xs text-center text-gray-500 mt-2">
            This page is protected â€” your verification code is never stored or shared.
        </p>
    </div>
</div>
