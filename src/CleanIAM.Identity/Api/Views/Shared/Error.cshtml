@using ErrorViewModel = CleanIAM.Identity.Api.ViewModels.Shared.ErrorViewModel
@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="w-full h-screen flex justify-center items-center bg-gray-50">
    <div class="bg-white rounded-lg shadow-md p-8 w-full max-w-md">
        <!-- Error Message -->
        <h1 class="text-red-950 text-3xl font-bold text-center mb-4">@(Model.Error ?? "Error")</h1>
        <h2 class="text-red-800 text-xl text-center">@(Model.ErrorDescription ?? "An error occurred while processing your request.")</h2>
    </div>
</div>
